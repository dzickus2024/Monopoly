	public void setOwner(int ownerNum) {
		playerOwner = ownerNum;
		if(playerOwner!=-1) {//if you lose the property the bank takes it
		Board.getPlayers().get(playerOwner).addProp(this);
		}
	}
	
	public int getOwner() {
		return playerOwner;
	}
}
