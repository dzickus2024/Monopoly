import java.util.Scanner;
import java.awt.Color;

public class Railroad extends Property {
	private int cost = 200;
	private int playerOwner;
	
	public Railroad(int position) {
		super(position);
		playerOwner = 0;
	}
	
	public int getOwner() {
		return playerOwner;
	}
	
	public void setOwner(int num) {
		playerOwner = num;
	}
	
	public int getCost() {
		return cost;
	}
	
	public int calcRent(int pos) {
		int count = 0;
		for (int i = 0; i < Board.getPlayers().get(playerOwner).getProps().size(); i++) {
			if ((Board.getPlayers().get(playerOwner).getProps().get(i).getPos() % 10) == 5) {
				count++;
			}
		}
		if (count == 1) {
			return 25;
		} else if (count == 2) {
			return 50;
		} else if (count == 3) {
			return 100;
		} else {
			return 200;
		}
	}
	
	public void checkPos(int num, int roll) {
		Scanner console = new Scanner(System.in);
		super.checkPos(num, roll);
		if ((pos == 5 || pos == 15 || pos == 25 || pos == 35) && (Board.getTiles()[pos].getOwner() != num && Board.getTiles()[pos].getOwner() > 0)) {
			Board.getPlayers().get(num).changeBal(-calcRent(pos));
			Board.getPlayers().get(Board.getTiles()[pos].getOwner()).changeBal(calcRent(pos));
		} else if ((pos == 5 || pos == 15 || pos == 25 || pos == 35) && (Board.getTiles()[pos].getOwner() != num && Board.getTiles()[pos].getOwner() == 0)) {
			System.out.println("Do you wish to purchase this property (Yes or No)? ");
			System.out.println("Property Cost: " + getCost());
			String str = console.next();
			if (str.substring(0,1).equals("y") || str.substring(0,1).equals("Y")) {
				Board.getPlayers().get(num).changeBal(getCost());
				playerOwner = Board.getPlayers().get(num).getPlayerNum();
			}
		}
	}
	
	public Color getColor() {
		return Board.getBoardColor();
	}
}
