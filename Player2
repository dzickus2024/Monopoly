		System.out.println("(" + roll1 + ") + (" + roll2 + ") = (" + num + ")");
		if ((pos + num) > 39 && inJail == false) {
			pos = pos - 40 + num;
			changeBal(200);
			System.out.println("Collect $200 for passing Go!");
		} else {
			pos = pos + num;
		}
		System.out.println("Position: "+pos);
		checkSpace(pos);
